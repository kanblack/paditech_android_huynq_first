<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="55dp">

    <EditText
        android:id="@+id/ed_search_toolbar_top_screen5"
        android:hint="Search"
        android:layout_marginLeft="15dp"
        android:drawablePadding="10dp"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_search_grey_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_search_toolbar_top_screen5"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:padding="15dp"
        android:layout_alignRight="@+id/ed_search_toolbar_top_screen5"
        android:layout_alignParentRight="true"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/background_line_under_top_toolbar_screen5"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>