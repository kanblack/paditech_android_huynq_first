<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pesteam.paditech_android_huynq_first.Screen2Activity"
    android:gravity="center"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, "
        android:textColor="#ffffff"
        android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#2f86f7"
            android:textSize="30dp"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/background"/>

    <EditText
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/icon_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsdsdssss"/>
    <EditText
        android:drawablePadding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsdsdssss"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:padding="20dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="#39d4ff"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CREAT NEW ACCOUNT"
        android:gravity="center"
        android:textSize="13dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"/>
</LinearLayout>
