<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_big_child_rcv_vertical_screen5"
        android:src="@drawable/background"
        android:layout_width="65dp"
        android:layout_height="65dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_active_rcv_vertical_screen5"
        android:background="@drawable/over_green"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@id/img_big_child_rcv_vertical_screen5"
        android:layout_alignBottom="@+id/img_big_child_rcv_vertical_screen5"
        android:layout_alignEnd="@id/img_big_child_rcv_vertical_screen5"
        android:layout_toLeftOf="@+id/tv_name_child_rcv_vertical_screen5"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_name_child_rcv_vertical_screen5"
        android:layout_toRightOf="@+id/img_big_child_rcv_vertical_screen5"
        android:text="Just You"
        android:paddingBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content_rcv_vertical_screen5"
        android:textColor="#9B9B9B"
        android:layout_toLeftOf="@+id/img_small_child_rcv_vertical_screen5"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/img_big_child_rcv_vertical_screen5"
        android:layout_below="@+id/tv_name_child_rcv_vertical_screen5"
        android:text="456ddddddddddddddddddÄ‘"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="7dp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        android:id="@+id/tv_time_child_rcv_vertical_screen5"
        android:layout_alignParentRight="true"
        android:text="567"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_small_child_rcv_vertical_screen5"
        android:layout_below="@+id/tv_time_child_rcv_vertical_screen5"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/background"/>
</RelativeLayout>