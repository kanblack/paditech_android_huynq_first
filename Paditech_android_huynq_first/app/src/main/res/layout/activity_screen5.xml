<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pesteam.paditech_android_huynq_first.Screen5Activity">

    <include
        android:id="@+id/tool_bar_top_screen5"
        layout="@layout/tool_bar_top_screen5"/>
    <android.support.v7.widget.RecyclerView
        android:orientation="horizontal"
        android:layout_below="@+id/tool_bar_top_screen5"
        android:id="@+id/rcv_horizonal_screen5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:orientation="vertical"
        android:layout_below="@+id/rcv_horizonal_screen5"
        android:id="@+id/rcv_vertical_screen5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/tool_bar_bottom_screen5"
        android:layout_alignParentRight="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/over_blue1"
        android:gravity="center">
    <ImageView
        android:paddingTop="3dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_chat_white_24dp"
        android:background="@drawable/over_blue1"
        />
    </LinearLayout>
    <include
        android:id="@+id/tool_bar_bottom_screen5"
        android:layout_alignParentBottom="true"
        layout="@layout/tool_bar_bottom_screen5"
        android:layout_height="55dp"
        android:layout_width="match_parent" />
</RelativeLayout>
